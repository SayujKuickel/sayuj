---
import { socialLinks } from "../data/social-links";
---

<ul class="flex gap-4">
  {
    socialLinks.map((link) => (
      <li class="text-xl">
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 hover:text-primary"
        >
          <i class={link.icon} />
        </a>
      </li>
    ))
  }
</ul>
